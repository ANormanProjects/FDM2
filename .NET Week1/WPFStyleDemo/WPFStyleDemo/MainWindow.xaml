<Window x:Class="WPFStyleDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Content="Click me!" Style="{StaticResource MyStyle}"/>
        <Button Content="Ugly" Style="{StaticResource CircleButton}"/>

        <TextBlock Text="Header" Style="{StaticResource textStyleBold}"/>
        <TextBlock Text="SubHeader" Style="{StaticResource textStyle}"/>
    </StackPanel>
</Window>
