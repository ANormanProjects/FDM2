@model ICollection<SocialNetwork.WebUI.Models.UserPostViewModel>

@{
    ViewBag.Title = "Code Wall";
}

<h1 class="text-center">The Code Wall</h1>
<h3 class="text-center">Create new post</h3>
<div class="col-md-offset-2 col-md-8 pink">
    @Html.Partial("_MakePostForm", new SocialNetwork.WebUI.Models.UserPostViewModel())
</div>


<br />


<hr />
<h2 class="text-center">Recent Posts</h2>
@foreach(SocialNetwork.WebUI.Models.UserPostViewModel viewModel in Model)
{
    @Html.Partial("_UserPost", viewModel)
}







