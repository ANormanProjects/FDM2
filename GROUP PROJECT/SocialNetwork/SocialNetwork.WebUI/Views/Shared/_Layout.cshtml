<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Cabin|Neuton:700|Nunito|VT323|Work+Sans" rel="stylesheet">
    <title>@ViewBag.Title - dotNetwork</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="60">
    <link href="https://fonts.googleapis.com/css?family=Cabin|Neuton:700|Nunito|VT323|Work+Sans" rel="stylesheet">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">@Html.ActionLink("dotNetwork", "Index", "Home", routeValues: null, htmlAttributes: new { id = "home", @class = "nav-title", @style = "color: #ffffff;" })</a>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>  
                <span class="icon-bar"></span>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse left" id="myNavbar">
                <ul class="nav navbar-nav" style="color: white;">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="color: white;"><i class="glyphicon glyphicon-globe" style="color: white;"></i> Explore<span class="caret" style="color: white;"></span></a>
                        <ul class="dropdown-menu" style="background-color: #255366">
                    <li><i class="glyphicon glyphicon-globe" style="color: white;"></i>@Html.ActionLink("Code Wall", "Wall", "CodeWall", routeValues: null, htmlAttributes: new { id = "codeWall", @style = "color:#ffffff;" })</li>
                    <li>@Html.ActionLink("Profile", "ProfilePage", "Account", routeValues: null, htmlAttributes: new { id = "profile", @style = "color:#ffffff;" })</li>
                    <li>@Html.ActionLink("Groups", "GroupList", "Group", routeValues: null, htmlAttributes: new { id = "profile", @style = "color:#ffffff;" })</li>
                        </ul>
                    </li>
                    <li style="margin-top:8px;">
                        @using (Html.BeginForm("SearchResults", "Search"))
                        {

                                <div class="input-group">
                                    @Html.TextBox("searchString", "Search...", new { @class = "form-control" } )
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="submit">
                                            <i class="glyphicon glyphicon-search" style="color: #255366;"></i>
                                        </button>
                                    </span>
                                </div>
                        }
                    </li>
                </ul>
                @Html.Partial("_LoginPartial", new { @class = "form-control" })
            </div>
        </div>
    </div>




    <div class="container-layout body-content" style="font-family: 'Cabin', sans-serif;">
        @*DO NOT EDIT THIS*@
        @RenderBody()
    </div>

    <footer class="footer-wrapper">
        <div class="footer-container">
            <a href="#myPage" title="To Top" style="color: white;">
                <span class="glyphicon glyphicon-chevron-up" style="margin-bottom: 50px;"></span>
            </a>
            <nav class="nav">
                @Html.ActionLink("Home", "Index", "Home")
                @Html.ActionLink("Code Wall", "Wall", "CodeWall")
                @Html.ActionLink("Your Profile", "ProfilePage", "Account")
            </nav>
            <nav class="share-nav">
                <a href="https://twitter.com" target="_blank">
                    <img src="~/Content/twitter.svg" alt="Twitter">
                </a>
                <a href="https://www.facebook.com" target="_blank">
                    <img src="~/Content/facebook.svg" alt="Facebook">
                </a>
                <a href="https://www.linkedin.com" target="_blank">
                    <img src="~/Content/linkedin.svg" alt="LinkedIn">
                </a>
                <a href="mailto:contact@budgie.com" target="_blank">
                    <img src="~/Content/mail.svg" alt="Drop us an email">
                </a>
            </nav>
            <p>
                &copy; @DateTime.Now.Year - dotNetwork is a company registered in London.
            </p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/custom.css")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            // Add smooth scrolling to all links in navbar + footer link
            $(".navbar a, footer a[href='#myPage']").on('click', function (event) {
                // Make sure this.hash has a value before overriding default behavior
                if (this.hash !== "") {
                    // Prevent default anchor click behavior
                    event.preventDefault();

                    // Store hash
                    var hash = this.hash;

                    // Using jQuery's animate() method to add smooth page scroll
                    // The optional number (900) specifies the number of milliseconds it takes to scroll to the specified area
                    $('html, body').animate({
                        scrollTop: $(hash).offset().top
                    }, 900, function () {

                        // Add hash (#) to URL when done scrolling (default click behavior)
                        window.location.hash = hash;
                    });
                } // End if
            });

            $(window).scroll(function () {
                $(".slideanim").each(function () {
                    var pos = $(this).offset().top;

                    var winTop = $(window).scrollTop();
                    if (pos < winTop + 600) {
                        $(this).addClass("slide");
                    }
                });
            });
        })
    </script>

</body>
</html>
