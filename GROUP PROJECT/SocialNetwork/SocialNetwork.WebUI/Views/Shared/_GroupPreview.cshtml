@model SocialNetwork.WebUI.Models.GroupViewModels

<div class="container">
    <div class="post-container" style="background-color:#e6e6e6">
        <div class="post-sidebar col-sm-2">
            <h2>@Model.group.groupName</h2>
            <p>
                <span>Group Owner:</span>
                <span>@Model.group.owner.fullName</span>
            </p>
            <p>
                <span>Members:</span>
                <span>@Model.group.usersInGroup.Count</span>
            </p>
            <div>
                @using (Html.BeginForm("GroupProfile", "Group", FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.group.groupID);                    
                    <input type="submit" value="View Group" />
                }
            </div>
        </div>
        <div class="col-sm-10">
            <h3>Most recent post:</h3>
            <div class="container" style="background-color:#ffffff">
                <h4>@Model.group.groupWall.First().content</h4>
                <div class="container post-code">
                    <pre>@Model.group.groupWall.First().code</pre>
                </div>
                <h5>@Model.group.groupWall.First().time</h5>
            </div>
        </div>
    </div>
</div>