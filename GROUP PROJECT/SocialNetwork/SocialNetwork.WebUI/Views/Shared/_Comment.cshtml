@model SocialNetwork.WebUI.Models.CommentViewModel

<div class="comment-container">
    <div class="container comment-sidebar col-sm-2">
        @if (Model.comment.user != null)
        {
            <img class="post-profile-image" src="~/Content/@Model.comment.user.username-profileimg.jpg" />
        }
        else
        {
            <img class="post-profile-image" src="~/Content/profile-picture-blank.gif" />
        }
    </div>

    <div class="container comment-content col-sm-10">
        <h4>@Model.user.fullName</h4>
        <p>@Model.comment.content</p>
    </div>
</div>
