@model SocialNetwork.WebUI.Models.GroupViewModels
@{
    ViewBag.Title = "Group Profile";
}
<div>
    <img src="~/Content/cover.jpg" alt="coverimg" style="width:100%;height:300px" />
</div>
<div></div>
<div class="text-center">
    <h2>@Model.group.groupName</h2>
</div>
<div class="container">
    <div class="col-sm-2">
        <div>
            <span>Owner:</span>
            <span>@Model.group.owner.fullName</span>
        </div>
        <div>
            <span>Members:</span>
            <span>@Model.group.usersInGroup.Count</span>
        </div>
    </div>
    <div class="col-sm-10">
        @foreach (var post in Model.group.groupWall)
        {
            <div class="post-container">
                <h2>@post.title</h2>
                <h4>@post.time</h4>
                <p>@post.content</p>
                <div class="container post-code">
                    <pre>@post.code</pre>
                </div>
                <p>Likes: @post.likes</p>
                <div class="container post-comments col-sm-8">
                    @foreach (SocialNetwork.DataAccess.Comment comment in post.comments)
                    {
                        @Html.Partial("_Comment", comment)
                    }
                </div>
            </div>
        }
    </div>
</div>