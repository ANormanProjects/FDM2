<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Cabin|Lobster" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <title>@ViewBag.Title - Budgie</title>
    @Styles.Render("~/Content/css", "~/Content/Style.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="60">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">  
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-header" href="#myPage"><img src="~/Content/budgie.png" id="budgie" /></a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li><h1 id="Budgieheader">Budgie</h1></li>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>


    <div class="container-fluid2">
        @RenderBody()
        </div>

        <footer class="footer-wrapper">
            <div class="footer-container">
                <a href="#myPage" title="To Top">
                    <span class="glyphicon glyphicon-chevron-up"></span>
                </a>
                <nav class="nav">
                    @Html.ActionLink("Home", "Index", "Home")
                    @Html.ActionLink("FAQ", "FAQ", "Home")
                    @Html.ActionLink("Careers", "Careers", "Home")
                    @Html.ActionLink("Contact", "Contact", "Home")
                </nav>
                <nav class="share-nav">
                    <a href="https://twitter.com" target="_blank">
                        <img src="~/Content/twitter.svg" alt="Twitter">
                    </a>
                    <a href="https://www.facebook.com" target="_blank">
                        <img src="~/Content/facebook.svg" alt="Facebook">
                    </a>
                    <a href="https://www.linkedin.com" target="_blank">
                        <img src="~/Content/linkedin.svg" alt="LinkedIn">
                    </a>
                    <a href="mailto:contact@budgie.com" target="_blank">
                        <img src="~/Content/mail.svg" alt="Drop us an email">
                    </a>
                </nav>
                <p>
                    &copy; @DateTime.Now.Year - Budgie Ltd is a company registered in Tokyo. Budgie Ltd is authorised by the Prudential Regulation Authority (PRA) and regulated by the Financial Conduct Authority and the PRA.  Our Financial Services Register number is tehehe666.
                </p>
            </div>
        </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/BudgieScript.js")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    @RenderSection("scripts", required: false)
    <script>
    $(document).ready(function(){
        // Add smooth scrolling to all links in navbar + footer link
        $(".navbar a, footer a[href='#myPage']").on('click', function(event) {
            // Make sure this.hash has a value before overriding default behavior
            if (this.hash !== "") {
                // Prevent default anchor click behavior
                event.preventDefault();

                // Store hash
                var hash = this.hash;

                // Using jQuery's animate() method to add smooth page scroll
                // The optional number (900) specifies the number of milliseconds it takes to scroll to the specified area
                $('html, body').animate({
                    scrollTop: $(hash).offset().top
                }, 900, function(){
   
                    // Add hash (#) to URL when done scrolling (default click behavior)
                    window.location.hash = hash;
                });
            } // End if
        });
  
        $(window).scroll(function() {
            $(".slideanim").each(function(){
                var pos = $(this).offset().top;

                var winTop = $(window).scrollTop();
                if (pos < winTop + 600) {
                    $(this).addClass("slide");
                }
            });
        });
    })
    </script>


</body>
</html>
