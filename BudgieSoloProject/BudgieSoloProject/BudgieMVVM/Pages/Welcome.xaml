<Page x:Class="BudgieMVVM.Pages.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:BudgieMVVM.ViewModels"
      xmlns:local="clr-namespace:BudgieMVVM"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="Budgie Admin Control Panel">

    <Page.DataContext>
        <vm:BudgieViewModel/>
    </Page.DataContext>
  
    
    <StackPanel Background="LightSkyBlue">

        <StackPanel Background="SteelBlue">
            <TextBlock Text="Welcome Budgie Admin" Style="{StaticResource textStyle}" Foreground="GhostWhite"/>
        </StackPanel>
        <TextBlock Text="This is the BudgieUser Control Panel" Style="{StaticResource textStyle2}"/>
        <Button Content="List of all Budgie Users" Command="{Binding navigateListOfAllUsersCommand}" Style="{StaticResource MyStyle}" BorderThickness="0"/>
        <Button Content="Add new Budgie User" Command="{Binding navigateAddUserCommand}" Style="{StaticResource MyStyle}"/>
        <Button Content="Remove Budgie User" Command="{Binding navigateRemoveUserCommand}" Style="{StaticResource MyStyle}"/>
    </StackPanel>
</Page>
