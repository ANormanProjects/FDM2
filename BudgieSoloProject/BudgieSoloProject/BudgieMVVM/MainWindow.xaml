<Window x:Class="BudgieMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BudgieMVVM.ViewModels"
        Title="Admin Control Panel" Height="350" Width="525">

    <Window.DataContext>
        <vm:BudgieViewModel/>
    </Window.DataContext>

    <StackPanel>
        <TextBlock Text="{Binding message}"/>
        <Button Content="Click Me!" Command="{Binding changeMessageCommand}"/>
    </StackPanel>
</Window>
