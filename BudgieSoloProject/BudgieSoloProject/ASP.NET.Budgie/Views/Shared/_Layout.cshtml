<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Budgie</title>
    @Styles.Render("~/Content/css", "~/Content/Style.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <img src="~/Content/budgie.png" id="budgie" />
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li><h1 id="Budgieheader">Budgie</h1></li>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Sign Up", "RegisterUser", "BudgieUser")</li>
                    <li>@Html.ActionLink("Login", "RegisterUser", "BudgieUser")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown">
                            Admin
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("List of Users", "ListOfAllBudgieUsers", "BudgieUser")</li>
                            <li>@Html.ActionLink("Update User", "UpdateUser", "BudgieUser")</li>
                            <li>@Html.ActionLink("Remove User", "RemoveUser", "BudgieUser")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />

        <footer class="footer-wrapper">
            <div class="footer-container">
                <nav class="nav">
                    @Html.ActionLink("Home", "Index", "Home")
                    @Html.ActionLink("FAQ", "FAQ", "Home")
                    @Html.ActionLink("Careers", "Careers", "Home")
                    @Html.ActionLink("Contact", "Contact", "Home")
                </nav>
                <nav class="share-nav">
                    <a href="https://twitter.com" target="_blank">
                        <img src="~/Content/twitter.svg" alt="Twitter">
                    </a>
                    <a href="https://www.facebook.com" target="_blank">
                        <img src="~/Content/facebook.svg" alt="Facebook">
                    </a>
                    <a href="https://www.linkedin.com" target="_blank">
                        <img src="~/Content/linkedin.svg" alt="LinkedIn">
                    </a>
                    <a href="mailto:contact@budgie.com" target="_blank">
                        <img src="~/Content/mail.svg" alt="Drop us an email">
                    </a>
                </nav>
                <p>
                    &copy; @DateTime.Now.Year - Budgie Ltd is a company registered in Tokyo. Budgie Ltd is authorised by the Prudential Regulation Authority (PRA) and regulated by the Financial Conduct Authority and the PRA.  Our Financial Services Register number is tehehe666.
                </p>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/BudgieScript.js")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    @RenderSection("scripts", required: false)
</body>
</html>
