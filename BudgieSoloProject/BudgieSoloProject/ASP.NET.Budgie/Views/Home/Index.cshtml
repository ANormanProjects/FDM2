    ViewBag.Title = "Home Page";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="style.css">
    <link href="https://fonts.googleapis.com/css?family=Cabin|Lobster" rel="stylesheet">
    <title>@ViewBag.Title - Budgie</title>
    @Styles.Render("~/Content/css", "~/Content/Style.css")
    @Scripts.Render("~/bundles/BudgieScript.js")
</head>

<body>
    @*<!--TOP NAV BAR-->
        <div id="divNB">
            <ul class="topnav" id="myTopnav">
                <li><img src="budgie.png" id="budgie" /></li>
                <li><h1 id="Budgieheader">Budgie</h1></li> <!-- header 1 -->
