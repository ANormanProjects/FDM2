@model BudgieDatabaseLayer.BudgieUser
@{
    ViewBag.Title = "RemoveUser";
}

<h2>Remove User</h2>

@using (Ajax.BeginForm("RemoveUser", "BudgieUsers", new AjaxOptions()
{
    HttpMethod = "POST",
    UpdateTargetId = "removeForm",
    InsertionMode = InsertionMode.InsertAfter
}, new { @id = "removeForm" }))

{
    <div class="form-horizontal">
        <h4>Please enter the ID of the account you wish to remove:</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.emailAddress, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class=" col-md-10">
                @Html.EditorFor(model => model.emailAddress, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>

    </div>
}